{
    "Change Background": {
        "prefix": [ "$ ChangeBackground" ],
        "body": [ "$ ChangeBackground {&/Game/} fade 0.5" ],
        "description": [
            "Change the background image on screen with a transition animation.",
            "    (path: ref)          script reference by path to the image file",
            "    (transition: string) [ none, fade, dissolve, scrollup, shake ]",
            "    (duration: float)    in seconds",
            "",
            "Example:",
            "$ ChangeBackground {&/Game/Backgrounds/School.School}",
            "$ ChangeBackground {&MyRef} dissolve 1",
            "\n"
        ]
    },

    "Play Sound": {
        "prefix": [ "$ PlaySound" ],
        "body": [ "$ PlaySound " ],
        "description": "."
    },

    "Stop Sound": {
        "prefix": [ "$ StopSound" ],
        "body": [ "$ StopSound " ],
        "description": "."
    },

    "Stop All Sounds": {
        "prefix": [ "$ StopAllSounds" ],
        "body": [ "$ StopAllSounds " ],
        "description": "."
    }
}