{
    "Condition If": {
        "prefix": [ "? if:" ],
        "body": [
            "if: ${1:condition}",
            "",
            "  ${2:statements}",
            "",
            "endif"
        ],
        "description": "."
    },



    "Directive Define": {
        "prefix": [ "~ define" ],
        "body": [ "~ define " ],
        "description": "."
    },

    "Directive Replace": {
        "prefix": [ "~ replace" ],
        "body": [ "~ replace " ],
        "description": "."
    },

    "Directive Start": {
        "prefix": [ "~ start" ],
        "body": [ "~ start" ],
        "description": "."
    },



    "Tag Once": {
        "prefix": [ "#once" ],
        "body": [ "#once" ],
        "description": "."
    },

    "Tag Mark": {
        "prefix": [ "#mark" ],
        "body": [ "#mark" ],
        "description": "."
    },



    "Custom Rich Text Tag": {
        "prefix": [ "<></>" ],
        "body": [ "<${1:tag}>${2:text}</>" ],
        "description": "."
    },

    "Bold Rich Text Tag": {
        "prefix": [ "<b></>" ],
        "body": [ "<b>${0}</>" ],
        "description": "."
    }
}