{
    "Condition If": {
        "prefix": [ "if:" ],
        "body": [
            "if: ${1:condition}",
            "",
            "  ${2:statements}",
            "",
            "endif"
        ],
        "description": [ "Create a conditional section between the 'if: condition' and 'endif' statements.\n" ]
    },

    "Condition Else If": {
        "prefix": [ "elseif:" ],
        "body": [
            "elseif: ${1:condition}",
            "",
            "  ${2:statements}"
        ],
        "description": [ "Must be inside an 'if:endif' section, will play only if its condition is 'on' and the 'if:' statement fails.\n" ]
    },

    "Condition Else": {
        "prefix": [ "else:" ],
        "body": [
            "else:",
            "",
            "  ${0}"
        ],
        "description": [ "Must be inside an 'if:endif' section, will play only if the 'if:' and all 'endif:' statements fails.\n" ]
    },

    "Condition End If": {
        "prefix": [ "endif" ],
        "body": [ "endif\n\n" ],
        "description": [ "End a 'if:' section.\n" ]
    },



    "Directive Define": {
        "prefix": [ "~ define" ],
        "body": [ "~ define " ],
        "description": "."
    },

    "Directive Replace": {
        "prefix": [ "~ replace" ],
        "body": [ "~ replace " ],
        "description": "."
    },

    "Directive Start": {
        "prefix": [ "~ start" ],
        "body": [ "~ start" ],
        "description": "."
    },



    "Tag Once": {
        "prefix": [ "#once" ],
        "body": [ "#once" ],
        "description": "."
    },

    "Tag Mark": {
        "prefix": [ "#mark" ],
        "body": [ "#mark" ],
        "description": "."
    },



    "Custom Rich Text Tag": {
        "prefix": [ "<></>" ],
        "body": [ "<${1:tag}>${2:text}</>" ],
        "description": "."
    },

    "Bold Rich Text Tag": {
        "prefix": [ "<b></>" ],
        "body": [ "<b>${0}</>" ],
        "description": "."
    }
}